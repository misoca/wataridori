#!/usr/bin/env ruby
# frozen_string_literal: true

require 'bundler/setup'
require 'wataridori'
require 'dotenv/load'
require 'yaml'

unless ARGV.first
  warn 'Usage: bin/wataridori "path/to/category" [path/to/copy_result.yml]'
  exit false
end

%w[ESA_TOKEN ESA_FROM_TEAM ESA_TO_TEAM].each do |key|
  unless ENV[key]
    warn "Error: #{key} is empty. Please set the value to .env file."
    exit false
  end
end

client = Wataridori::Client.from_teamname(
  token: ENV['ESA_TOKEN'],
  from: ENV['ESA_FROM_TEAM'],
  to: ENV['ESA_TO_TEAM']
)

copy_results = client.bulk_copy(ARGV.first)
YAML.dump(copy_results.map(&:to_h), File.open(ARGV[1], 'w')) if ARGV[1]

client.replace_links(copy_results)
